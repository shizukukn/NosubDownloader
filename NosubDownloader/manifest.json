{
  "name": "__MSG_extName__",
  "description": "__MSG_extDescription__",
  "author": "KONO Shizuku",
  "icons": {
    "128": "assets/icons/icon128.png",
    "48": "assets/icons/icon48.png"
  },
  "default_locale": "en",
  "version": "1.3.1.1",
  "manifest_version": 2,
  "background": {
    "scripts": [
      "vendor/js/underscore-min.js",
      "background/js/referer.js"
    ]
  },
  "content_scripts": [
    {
    "matches": ["*://www.nosub.tv/watch/*"],
    "css"    : [
    ],
    "js"     : [
      "vendor/js/zepto.min.js",
      "vendor/js/underscore-min.js",
      "vendor/js/md5.js",
      "content_scripts/js/mukiopress.js",
      "content_scripts/js/download.js"
    ],
    "run_at" : "document_idle",
    "all_frames": false
    }
  ],
  "permissions": [
    "*://www.nosub.tv/*",
    "http://video.fc2.com/*",
    "http://videotfs.tc.qq.com/*",
    "webRequest",
    "webRequestBlocking"
  ],
  "web_accessible_resources": [
    "vendor/js/*.map"
  ]
}
